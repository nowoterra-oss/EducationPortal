{
  // C# ve .NET ayarlar覺
  "dotnet.defaultSolution": "EduPortal.sln",

  // Hot Reload ayarlar覺
  "dotnet-watch-options.suppressBrowserRefresh": false,
  "dotnet-watch-options.suppressLaunchBrowser": true,

  // Debug ayarlar覺
  "debug.console.closeOnEnd": false,
  "debug.internalConsoleOptions": "neverOpen",
  "debug.openDebug": "neverOpen",

  // File exclusions for better performance
  "files.exclude": {
    "**/bin": true,
    "**/obj": true
  },

  // Dil ayarlar覺
  "files.encoding": "utf8",
  "files.eol": "\n"
}
